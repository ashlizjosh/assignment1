<h3>{{viewTitle}}</h3>

<form action="/customer" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{customer._id}}">
<div class="form-group">
<label>Name</label>
<input type="text" class="form-control" name="fullName" placeholder="Name" value="{{customer.fullName}}">
<div class="text-danger">
{{customer.fullNameError}}</div>
</div>
<div class="form-group">
<label>Email</label>
<input type="text" class="form-control" name="email" placeholder="Email" value="{{customer.email}}">
<div class="text-danger">
{{customer.emailError}}</div>
</div>
<div class="form-row">
<div class="form-group col-md-6">
<label>Mobile</label>
<input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{customer.mobile}}">
</div>
<div class="form-group col-md-6">
<label>House Name</label>
<input type="text" class="form-control" name="city" placeholder="house" value="{{customer.city}}">
</div>
</div>
<div class="form-row">
<div class="form-group col-md-6">
<label>Place</label>
<input type="text" class="form-control" name="place" placeholder="place" value="{{customer.place}}">
</div>
<div class="form-group col-md-6">
<label>District</label>
<input type="text" class="form-control" name="dist" placeholder="district" value="{{customer.dist}}">
</div>
</div>
<div class="form-group">
<button type="submit" class="btn btn-info"><i class="fa fa-database"></i> SAVE</button>
<a class="btn btn-secondary" href="/customer/list"><i class="fa fa-list-alt"></i> VIEW </a>
</div>
</form>